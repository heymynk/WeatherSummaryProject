<apex:page title="Temperature Chart" controller="WeatherSummaryHandler">
    <apex:includeScript value="{!$Resource.chartJs}"/>

    <style>
              /* Styles for the chart container */
              .chart-container {
            position: relative;
            width: 100%; /* Make the container take up the full width */
            max-width: 800px; /* Adjust max-width according to your layout */
            background-color: #f3f3f3; /* Background color for the chart */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Drop shadow */
        }

        /* Styles for the canvas */
        canvas {
            display: block;
            width: 100%;
            height: 100%; /* Make the canvas fill the container */
            border-radius: 8px; 
        }


        .chart-legend {
            position: absolute;
            bottom: 10px;
            left: 10px;
            color: #333;
            font-size: 8px;
        }
    </style>

    <div class="chart-container">
        <canvas id="myChart"></canvas>
    </div>

    <script>
        // Utility function to decode HTML entities
        function decodeHtml(html) {
            var txt = document.createElement("textarea");
            txt.innerHTML = html;
            return txt.value;
        }

        window.onload = function() {
            var leadId = '{!$CurrentPage.parameters.Id}';

            console.log('leadId', leadId);
            WeatherSummaryHandler.getWeatherDataJSON(leadId, function(result, event) {
                if (event.status && result) {
                    console.log('result', result);

                    var decodedResult = decodeHtml(result);
                    console.log('decodedResult', decodedResult);

                    var weatherData = JSON.parse(decodedResult);
                    console.log('weatherData', weatherData);

                    if (weatherData && weatherData.length > 0) {
                        var timestamps = [];
                        var temperatures = [];
                        var rain = [];
                        var showers = [];
                        var snowfall = [];
                        var relative_humidity_2m = [];

                        for (var i = 0; i < weatherData.length; i++) {
                            timestamps.push(weatherData[i].timestamp.substring(11, 13));
                            temperatures.push(weatherData[i].temperature_2m);
                            rain.push(weatherData[i].rain);
                            snowfall.push(weatherData[i].snowfall);
                            showers.push(weatherData[i].showers);
                            relative_humidity_2m.push(weatherData[i].relative_humidity_2m);
                        }

                        var ctx = document.getElementById('myChart').getContext('2d');
                        var myChart = new Chart(ctx, {
                            type: 'line',
                            data: {
                                labels: timestamps,
                                datasets: [
                                    {
                                        label: 'Temperature (Â°C)',
                                        data: temperatures,
                                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                                        borderColor: 'rgba(54, 162, 235, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Rain (mm)',
                                        data: rain,
                                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                                        borderColor: 'rgba(255, 99, 132, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Snowfall (mm)',
                                        data: snowfall,
                                        backgroundColor: 'rgba(255, 206, 86, 0.2)',
                                        borderColor: 'rgba(255, 206, 86, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Showers (mm)',
                                        data: showers,
                                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                                        borderColor: 'rgba(75, 192, 192, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Humidity (%)',
                                        data: relative_humidity_2m,
                                        backgroundColor: 'rgba(153, 102, 255, 0.2)',
                                        borderColor: 'rgba(153, 102, 255, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.4
                                    }
                                ]
                            },
                            options: {
                                responsive: true, // Enable responsiveness
                                devicePixelRatio: window.devicePixelRatio,
                                animation: {
                                    duration: 1000
                                },
                                legend: {
                                    display: true,
                                    labels: {
                                        fontColor: 'black',
                                        fontSize: 8
                                    }
                                },
                                tooltips: {
                                    mode: 'index',
                                    intersect: false
                                },
                                hover: {
                                    mode: 'nearest',
                                    intersect: true
                                },
                                scales: {
                                    xAxes: [{
                                        display: true,
                                        scaleLabel: {
                                            display: true,
                                            labelString: 'Time (hours)',
                                            fontColor: 'black',
                                            fontSize: 12
                                        },
                                        ticks: {
                                            fontColor: 'black'
                                        }
                                    }],
                                    yAxes: [{
                                        display: true,
                                        scaleLabel: {
                                            display: true,
                                            labelString: 'Value',
                                            fontColor: 'black',
                                            fontSize: 16
                                        },
                                        ticks: {
                                            fontColor: 'black'
                                        }
                                    }]
                                }
                            }
                        });
                    } else {
                        console.error('No weather data found.');
                    }
                } else {
                    console.error('Error:', event.message);
                }
            });
        };
    </script>
</apex:page>
