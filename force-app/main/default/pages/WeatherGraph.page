<apex:page title="Temperature Chart" controller="WeatherSummaryHandler">
    <apex:includeScript value="{!$Resource.chartJs}"/>

    <style>
        canvas {
            background-color: #f3f3f3; 
            display: flex;
            width: 100%;
            height: 100%;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
            border-radius: 8px;
        }

        .chart-legend {
            position: absolute;
            bottom: 10px;
            left: 10px;
            color: #333;
            font-size: 8px;
        }

        /* Styles for the error message */
        .error-message {
            color: red;
            font-size: 14px;
            text-align: center;
            margin-top: 20px;
        }
    </style>

    <div class="chart-container">
        <canvas id="myChart"></canvas>
    </div>
    <div id="errorMessage" class="error-message" style="display: none;">
        No weather data found.
    </div>

    <script>
        function parseCSV(csv) {
            const lines = csv.split("\n");
            const headers = lines[0].split(", ");
            const data = [];

            for (let i = 1; i < lines.length; i++) {
                const obj = {};
                const currentline = lines[i].split(",");
                if (currentline.length === headers.length) {
                    for (let j = 0; j < headers.length; j++) {
                        obj[headers[j].trim()] = currentline[j].trim();
                    }
                    data.push(obj);
                }
            }
            return data;
        }

        window.onload = function() {
            var leadId = '{!$CurrentPage.parameters.Id}';

            WeatherSummaryHandler.getWeatherDataJSON(leadId, function(result, event) {
                if (event.status && result) {
                    console.log('result',result);
                    var weatherData = parseCSV(result);
                    console.log('weatherData',weatherData)

                    if (weatherData && weatherData.length > 0) {
                        var timestamps = [];
                        var temperatures = [];
                        var rain = [];
                        var showers = [];
                        var snowfall = [];
                        var relative_humidity_2m = [];

                        for (var i = 0; i < weatherData.length; i++) {
                            timestamps.push(weatherData[i]["Time"].substring(11, 13));
                            temperatures.push(parseFloat(weatherData[i]["Temperature (°C)"]));
                            rain.push(parseFloat(weatherData[i]["Rain (mm)"]));
                            snowfall.push(parseFloat(weatherData[i]["Snowfall (cm)"]));
                            showers.push(parseFloat(weatherData[i]["Showers (mm)"]));
                            relative_humidity_2m.push(parseFloat(weatherData[i]["Relative Humidity (%)"]));
                        }

                        var ctx = document.getElementById('myChart').getContext('2d');
                        var myChart = new Chart(ctx, {
                            type: 'line',
                            data: {
                                labels: timestamps,
                                datasets: [
                                    {
                                        label: 'Temperature (°C)',
                                        data: temperatures,
                                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                                        borderColor: 'rgba(54, 162, 235, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Rain (mm)',
                                        data: rain,
                                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                                        borderColor: 'rgba(255, 99, 132, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Snowfall (mm)',
                                        data: snowfall,
                                        backgroundColor: 'rgba(255, 206, 86, 0.2)',
                                        borderColor: 'rgba(255, 206, 86, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Showers (mm)',
                                        data: showers,
                                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                                        borderColor: 'rgba(75, 192, 192, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Humidity (%)',
                                        data: relative_humidity_2m,
                                        backgroundColor: 'rgba(153, 102, 255, 0.2)',
                                        borderColor: 'rgba(153, 102, 255, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.4
                                    }
                                ]
                            },
                            options: {
                                responsive: true, // Enable responsiveness
                                devicePixelRatio: window.devicePixelRatio,
                                animation: {
                                    duration: 1000
                                },
                                legend: {
                                    display: true,
                                    labels: {
                                        fontColor: 'black',
                                        fontSize: 11
                                    }
                                },
                                tooltips: {
                                    mode: 'index',
                                    intersect: false
                                },
                                hover: {
                                    mode: 'nearest',
                                    intersect: true
                                },
                                scales: {
                                    xAxes: [{
                                        display: true,
                                        scaleLabel: {
                                            display: true,
                                            labelString: 'Time (hours)',
                                            fontColor: 'black',
                                            fontSize: 12
                                        },
                                        ticks: {
                                            fontColor: 'black'
                                        }
                                    }],
                                    yAxes: [{
                                        display: true,
                                        scaleLabel: {
                                            display: true,
                                            labelString: 'Value',
                                            fontColor: 'black',
                                            fontSize: 14
                                        },
                                        ticks: {
                                            fontColor: 'black'
                                        }
                                    }]
                                }
                            }
                        });
                    } else {
                        document.getElementById('errorMessage').style.display = 'block';
                    }
                } else {
                    document.getElementById('errorMessage').style.display = 'block';
                    console.error('Error:', event.message);
                }
            });
        };
    </script>
</apex:page>
