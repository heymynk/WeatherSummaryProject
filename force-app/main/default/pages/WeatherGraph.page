<apex:page title="Temperature Chart" controller="WeatherSummaryHandler">
    <apex:includeScript value="{!$Resource.chartJs}"/>

    <style>
        /* Enhance the overall look of the chart container */

        .chart-container {
            position: relative;
            width: 90%; /* Adjust width for better responsiveness */
            max-width: 1200px; /* Increase max-width */
            margin: 20px auto; /* Centering the chart container and adding margin */
            padding: 20px; /* Adding padding for better spacing */
            background-color: #f3f3f3; /* Background color */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Drop shadow for depth */
        }

        /* Adjusting the canvas inside the container to be inherently responsive */

     
        canvas {
            display: block;
            width: 100%;
            
        }

        /* Style adjustments for the chart legend */
        .chart-legend {
            position: absolute;
            bottom: 10px;
            left: 10px;
            color: #333;
            font-size: 12px; /* Font size for better readability */
            padding: 10px; /* Padding for better spacing */
        }
    </style>

    <div class="chart-container">
        <canvas id="myChart"></canvas>
    </div>

    <script>
        function decodeHtml(html) {
            var txt = document.createElement("textarea");
            txt.innerHTML = html;
            return txt.value;
        }

        function parseCSV(csv) {
            const lines = csv.split("\n");
            const headers = lines[0].split(", ");
            const data = [];

            for (let i = 1; i < lines.length; i++) {
                const obj = {};
                const currentline = lines[i].split(",");
                if (currentline.length === headers.length) {
                    for (let j = 0; j < headers.length; j++) {
                        obj[headers[j].trim()] = currentline[j].trim();
                    }
                    data.push(obj);
                }
            }
            return data;
        }

        window.onload = function() {
            var leadId = '{!$CurrentPage.parameters.Id}';
            console.log('leadId', leadId);
            WeatherSummaryHandler.getWeatherDataJSON(leadId, function(result, event) {
                if (event.status && result) {
                    var decodedResult = decodeHtml(result);
                    var weatherData = parseCSV(decodedResult);

                    if (weatherData && weatherData.length > 0) {
                        var timestamps = [];
                        var temperatures = [];
                        var rain = [];
                        var snowfall = [];
                        var showers = [];
                        var relative_humidity_2m = [];

                        for (var i = 0; i < weatherData.length; i++) {
                            timestamps.push(weatherData[i]["Time"].substring(11, 13));
                            temperatures.push(parseFloat(weatherData[i]["Temperature (°C)"]));
                            rain.push(parseFloat(weatherData[i]["Rain (mm)"]));
                            snowfall.push(parseFloat(weatherData[i]["Snowfall (cm)"]));
                            showers.push(parseFloat(weatherData[i]["Showers (mm)"]));
                            relative_humidity_2m.push(parseFloat(weatherData[i]["Relative Humidity (%)"]));
                        }

                        var ctx = document.getElementById('myChart').getContext('2d');
                        var myChart = new Chart(ctx, {
                            type: 'line',
                            data: {
                                labels: timestamps,
                                datasets: [
                                    {
                                        label: 'Temperature (°C)',
                                        data: temperatures,
                                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                                        borderColor: 'rgba(54, 162, 235, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Rain (mm)',
                                        data: rain,
                                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                                        borderColor: 'rgba(255, 99, 132, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Snowfall (mm)',
                                        data: snowfall,
                                        backgroundColor: 'rgba(255, 206, 86, 0.2)',
                                        borderColor: 'rgba(255, 206, 86, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Showers (mm)',
                                        data: showers,
                                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                                        borderColor: 'rgba(75, 192, 192, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.3
                                    },
                                    {
                                        label: 'Humidity (%)',
                                        data: relative_humidity_2m,
                                        backgroundColor: 'rgba(153, 102, 255, 0.2)',
                                        borderColor: 'rgba(153, 102, 255, 1)',
                                        borderWidth: 1,
                                        fill: true,
                                        tension: 0.4
                                    }
                                ]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: false, // Important for responsive height
                                devicePixelRatio: window.devicePixelRatio,
                                animation: {
                                    duration: 1000
                                },
                                legend: {
                                    display: true,
                                    labels: {
                                        fontColor: 'black',
                                        fontSize: 12,
                                        padding: 10
                                    }
                                },
                                tooltips: {
                                    mode: 'index',
                                    intersect: false
                                },
                                hover: {
                                    mode: 'nearest',
                                    intersect: true
                                },
                                scales: {
                                    xAxes: [{
                                        display: true,
                                        scaleLabel: {
                                            display: true,
                                            labelString: 'Time (hours)',
                                            fontColor: 'black',
                                            fontSize: 12
                                        },
                                        ticks: {
                                            fontColor: 'black'
                                        }
                                    }],
                                    yAxes: [{
                                        display: true,
                                        scaleLabel: {
                                            display: true,
                                            labelString: 'Value',
                                            fontColor: 'black',
                                            fontSize: 16
                                        },
                                        ticks: {
                                            fontColor: 'black'
                                        }
                                    }]
                                }
                            }
                        });
                    } else {
                        console.error('No weather data found.');
                    }
                } else {
                    console.error('Error:', event.message);
                }
            });
        };
    </script>
</apex:page>
